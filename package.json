{
  "name": "Forum",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon ./build/",
    "build": "npm install && rm -rf ./build && ./node_modules/.bin/tsc -p tsconfig.json",
    "start": "npm run build && node ./build",
    "tsc": "tsc",
    "test": "jest --config jest.config.js",
    "lint": "eslint './src/**/*'",
    "test-make": "make test",
    "start-make": "make run",
    "precommit": "make lint && git add ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "prettier --write",
      "npm run lint"
    ]
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/git"
    ]
  },
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "joi": "^14.3.1",
    "pino": "^5.13.4",
    "pino-pretty": "^3.2.0",
    "uuid": "^3.3.2",
    "@types/node": "^12.0.10",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.2",
    "jest": "^25.1.0",
    "@types/jest": "^25.1.2"
  },
  "devDependencies": {
    "@semantic-release/git": "^9.0.0",
    "@types/express": "^4.17.0",
    "@types/joi": "^14.3.3",
    "@types/node": "^12.0.10",
    "@types/pino": "^5.8.10",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^1.8.0",
    "@typescript-eslint/parser": "^1.8.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "lint-staged": "^10.0.7",
    "nodemon": "^1.19.1",
    "prettier": "^1.17.0",
    "semantic-release": "^17.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sergy-Dey/Forum.git"
  },
  "keywords": [],
  "author": "Sdeycun",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Sergy-Dey/Forum/issues"
  },
  "homepage": "https://github.com/Sergy-Dey/Forum#readme"
}
